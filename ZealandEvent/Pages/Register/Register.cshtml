@page
@model ZealandEvent.Pages.Register.RegisterModel
@{
}

<body>
    <div class="container2">
        <h3>Fill out the information to register your new account.</h3>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" asp-for="User.UserName" class="form-control" />
                        <span asp-validation-for="User.UserName" class="alert-warning"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" asp-for="User.Password" class="form-control" />
                        <span asp-validation-for="User.Password" class="alert-warning"></span>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" asp-for="User.Email" class="form-control" />
                        <span asp-validation-for="User.Email" class="alert-warning"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>