@page
@model ZealandEvent.Pages.Register.RegisterModel
@{
}

<style>
    .center {
        margin: 0;
        padding: 0;
        font-family: montserrat;
        overflow: hidden;
        height: 70vh;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 500px;
        background: white;
        border-radius: 10px;
    }

        .center > h1 {
            text-align: center;
            padding: 15px 0 20px 0;
            border-bottom: 1px solid silver;
        }

        .center > form {
            padding: 0 40px;
            box-sizing: border-box;
        }

    form > .txt_field {
        position: relative;
        border-bottom: 2px solid #adadad;
        margin: 50px 5px;
    }

        form > .txt_field > input {
            width: 100%;
            padding: 0 5px;
            height: 40px;
            font-size: 16px;
            border: none;
            background: none;
            outline: none;
            margin: 0%;
        }

            form > .txt_field > input[type=password] {
                width: 100%;
                padding: 0 5px;
                height: 40px;
                font-size: 23px;
                border: none;
                background: none;
                outline: none;
                margin: 0%;
            }

        form > .txt_field > label {
            position: absolute;
            top: 50%;
            left: 5px;
            color: #adadad;
            transform: translateY(-50%);
            font-size: 16px;
            pointer-events: none;
            transition: .5s;
        }

        form > .txt_field > span::before {
            content: "";
            position: absolute;
            top: 40px;
            left: 0;
            width: 0%;
            height: 2px;
            background: #2691d9;
            transition: .5s;
        }

        form > .txt_field > input:focus ~ label,
        form > .txt_field > input:valid ~ label {
            top: -15px;
            color: #2691d9;
        }

        form > .txt_field > input:focus ~ span::before,
        form > .txt_field > input:valid ~ span::before {
            width: 100%;
        }

    form > input[type=submit] {
        width: 100%;
        height: 50px;
        border: 1px solid;
        background: #2691d9;
        border-radius: 25px;
        font-size: 18px;
        color: #e9f4fb;
        font-weight: 700;
        cursor: pointer;
        outline: none;
    }

        form > input[type=submit]:hover {
            border-color: #2691d9;
            transition: .5s;
        }

</style>


<div class="center">
    <h1>Opret en bruger</h1>
    <div style="color:red; text-align:center; font-weight:600;">
            @Model.Message
        <p style="font-size:small"><span asp-validation-for="User.UserName" class="alert-danger"></span></p>
        <p style="font-size:small"><span asp-validation-for="User.Password" class="alert-danger"></span></p>
        <p style="font-size:small"><span asp-validation-for="User.Email" class="alert-danger"></span></p>
    </div>
    <form method="post">
        <div class="txt_field">
            <input asp-for="User.UserName" type="text" required />
            <span></span>
            <label asp-for="User.UserName">Indtast dit ønsket brugernavn</label>
        </div>
        <div class="txt_field">
            <input asp-for="User.Password" type="password" required />
            <span></span>
            <label asp-for="User.Password">Indtast dit ønsket kodeord</label>
        </div>
        <div class="txt_field">
            <input asp-for="User.Email" type="email" required />
            <span></span>
            <label asp-for="User.Email">Indtast din E-mail</label>
        </div>
        <input type="submit" value="Opret" />
    </form>
</div>