@page
@model ZealandEvent.Pages.Bookings.MyBookingsModel
@{
}

<h3>Mine bookinger</h3>
<div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Navn
                </th>
                <th>
                    Telefon
                </th>
                <th>
                    VIP
                </th>
                <th>
                    Parkering
                </th>
                <th>
                    Arrangement
                </th>
                <th>
                    Dato
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Bookings)
            {

            <tr>
                <td>@b.Firstname @b.Lastname</td>
                <td>@b.Phone</td>
                @if (b.Vip == 0)
                {
                    <td>Nej</td>
                }
                @if (b.Vip == ZealandEventLib.Models.VIP.JaTak)
                {
                    <td>Ja</td>
                }
                @if (b.Vip == ZealandEventLib.Models.VIP.JaTakPlusC)
                {
                    <td>Ja & Champagne Menu</td>
                }
                @if (b.Vip == ZealandEventLib.Models.VIP.JaTakPlusCogN)
                {
                    <td>Ja & Champagne Menu+Normal Menu</td>
                }
                @if (b.Vip == ZealandEventLib.Models.VIP.JaTakPlusCogV)
                {
                    <td>Ja & Champagne Menu+Vegansk Menu</td>
                }
                @if (b.Parking == false)
                {
                    <td></td>
                }
                @if (b.Parking == true)
                {
                    <td><i class="fa fa-check"></i></td>
                }
                @if (b.Arrangement.Department == 0)
                            {
            <td>@b.Arrangement.Name (Zealand - Roskilde)</td>
                            }
                            else if (b.Arrangement.Department == ZealandEventLib.Models.Department.ZealandNæstved)
                            {
            <td>@b.Arrangement.Name (Zealand - Næstved)</td>
                            }
                            else if (b.Arrangement.Department == ZealandEventLib.Models.Department.ZealandSlagelse)
                            {
            <td>@b.Arrangement.Name (Zealand - Slagelse)</td>
                            }
                            else if (b.Arrangement.Department == ZealandEventLib.Models.Department.ZealandKøge)
                            {
            <td>@b.Arrangement.Name (Zealand - Køge)</td>
                            }
                            else if (b.Arrangement.Department == ZealandEventLib.Models.Department.ZealandRingsted)
                            {
            <td>@b.Arrangement.Name (Zealand - Ringsted)</td>
                            }
                            else
                            {
            <td>@b.Arrangement.Name (Zealand - Holbæk)</td>
                            }
                <td>@b.Arrangement.Date.ToShortDateString()</td>
                <td>
                    <a class="btn" type="button" asp-page="./Delete" asp-route-id="@b.BookingId">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>