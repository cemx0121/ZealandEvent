@page
@model ZealandEvent.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Slet tilmelding";
}

<h3>Er du sikker på du vil slette din tilmelding?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Navn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Firstname) @Html.DisplayFor(model => model.Booking.Lastname)
        </dd>
        <dt class="col-sm-2">
            Telefon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Phone)
        </dd>
        <dt class="col-sm-2">
            Arrangement
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Arrangement.Name) @Model.Booking.Arrangement.Date.ToShortDateString()
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Booking.BookingId" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-page="./MyBookings" style="font-style:oblique; color:black"><i class="fa fa-reply" style="color:black; font-size:20px"></i> Tilbage</a>
    </form>
</div>
