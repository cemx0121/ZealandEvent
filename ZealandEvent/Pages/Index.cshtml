@page
@model IndexModel
@{
    ViewData["Title"] = "Forside";
}

<style>
    time {
        display: inline-block;
        width: 100%;
        padding: 0px;
        text-align: center;
        text-transform: uppercase;
    }
        time > .month {
            display: block;
            font-size: 24pt;
            font-weight: 900;
            line-height: 1;
        }
        time > .day {
            display: block;
            font-size: 56pt;
            font-weight: 100;
            line-height: 1;
        }
        time > span {
            display: none;
        }

    .grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 40px;
        align-items:center;
    }

        .grid > article {
            background: #eee5e9;
            border: none;
            box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.4);
            border-radius: 20px;
            text-align: center;
            width: 250px;
            transition: transform .3s;
        }

            .grid > article:hover {
                transform: translateY(8px);
                box-shadow: 2px 2px 26px 0px rgba(0,0,0,0.4);
            }

            .grid > article img {
                width: 100%;
                height: 225px;
                border-top-left-radius: 20px;
                border-top-right-radius: 20px;
            }

    .text {
        padding: 0 20px 20px;
    }

        .text h3 {
            text-transform: capitalize;
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight:600;
        }

        .text button {
            background: #ef6f6c;
            border-radius: 20px;
            border: none;
            color: #fff;
            padding: 10px;
            width: 100%;
            font-weight: 600;
            text-transform: uppercase;
            cursor: pointer;
        }
</style>

<div class="container">
    <img class="text-center" src="~/Billeder/zealandForside3.png" style="max-width:100%" />
    <form class="text-center" method="post">
        <input style="margin-bottom:25px; width:30%" type="text" asp-for="SearchText" class="form-control" placeholder="Søg på arrangement navn" /> <i class="fas fa-search"></i>
    </form>
    <main class="grid">
        @foreach (var a in Model.Arrangement)
        {
            <article>
                <img src="@Url.Content(a.ImagePath)" />
                <div class="text">
                    <h3>@a.Name</h3>
                    <hr style="background-color:black" />
                    <p>
                        <time datetime="@a.Date.ToShortDateString()" style="color:black">
                            <span class="day">@a.Date.Day</span>
                            <span class="month">@a.Date.ToString("MMM").Remove(3)</span>
                        </time>
                    </p>
                    @if (a.Department == 0)
                    {
                        <p>Zealand - Roskilde</p>
                    }
                    else if (a.Department == ZealandEventLib.Models.Department.ZealandNæstved)
                    {
                        <p>Zealand - Næstved</p>
                    }
                    else if (a.Department == ZealandEventLib.Models.Department.ZealandSlagelse)
                    {
                        <p>Zealand - Slagelse</p>
                    }
                    else if (a.Department == ZealandEventLib.Models.Department.ZealandKøge)
                    {
                        <p>Zealand - Køge</p>
                    }
                    else if (a.Department == ZealandEventLib.Models.Department.ZealandRingsted)
                    {
                        <p>Zealand - Ringsted</p>
                    }
                    else
                    {
                        <p>Zealand - Holbæk</p>
                    }
                    <a style="text-align:center" asp-page="/Arrangementer/Details" asp-route-id="@a.ArrangementId"><button>Se dagens program</button></a>
                </div>
            </article>
        }
    </main>
</div>

















