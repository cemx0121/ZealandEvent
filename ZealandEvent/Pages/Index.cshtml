@page
@model IndexModel
@{
    ViewData["Title"] = "Forside";
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }
</style>

@foreach (var a in Model.Arrangement)
{
<div class="card">
    <h1>@a.Name</h1>
    <p class="price">@a.Date.ToShortDateString()</p>
        @if (a.Department == 0)
        {
             <p>Zealand - Roskilde</p>
        }
        else
        {
            <p>Zealand - Næstved</p>
        }
    <a asp-page="/Arrangementer/Details" asp-route-id="@a.ArrangementId"><p><button>Se dagens program</button></p></a>
</div>
}





