@page
@model ZealandEvent.Pages.Arrangementer.IndexModel

@{
    ViewData["Title"] = "Arrangement oversigt";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    .box {
        width: 700px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        
    }


        .box > h2 {
            color: black;
            background: #b3d7ff;
            padding: 10px 20px;
            font-size: 20px;
            font-weight: 700;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            text-align: center;
            margin-bottom: 0;
        }
        .box > h3 {
            color: #fff;
            background: #b3d7ff;
            padding: 14px 20px;
            font-size: 20px;
            font-weight: 700;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
            text-align: center;
            margin-top: -16px;
        }

        .box > ul {
            position: relative;
            background: #fff;
        }

            .box > ul > li {
                list-style: none;
                padding: 10px;
                width: 100%;
                background: #fff;
                box-shadow: 0 5px 25px rgba(0,0,0,.1);
                transition: transform 0.5s;
            }

            .box > ul:hover > li {
                opacity: 0.2;
            }

            .box > ul > li:hover {
                transform: scale(1.1);
                z-index: 100;
                background: #b3d7ff;
                box-shadow: 0 5px 25px rgba(0,0,0,.2);
                color: #fff;
                opacity: 1;
            }

            .box > ul > li > article > img {
                width: 90px;
                height: 90px;
                border-radius: 50%;
                margin-left: 10px;
            }
</style>

<div style="display:flex; justify-content: center; align-items: center; min-height: 75vh;">
    <div class="box">
        <h2>Arrangement oversigt
            <p style="text-align:left; font-size:medium"><a asp-page="Create" style="font-style:oblique; color:black"><i class="fa fa-plus" style="color:black; font-size:20px"></i> Tilføj</a></p>
        </h2>
        <ul>
            @foreach (var a in Model.Arrangement)
            {
                <li>
                    <article style="float:right">
                        <img src="@Url.Content(a.ImagePath)" style="border-style:solid; border-width:3px;"/>
                    </article>
                    <section style="display:inline-block">
                        <article style="font-weight:700; font-size:large">@a.Name</article>
                        <article>
                            @a.Department |
                            <time datetime="@a.Date.ToShortDateString()" style="font-style:italic">
                                <span class="day">@a.Date.Day</span>
                                <span class="month">@a.Date.ToString("MMM").Remove(3)</span>
                                <span class="year">@a.Date.Year</span>
                            </time>
                        </article>
                        <article>
                            <a class="btn" type="button" asp-page="./Edit" asp-route-id="@a.ArrangementId">
                                <i class="fa fa-edit"></i>
                            </a> |
                            <a class="btn" type="button" asp-page="./Details" asp-route-id="@a.ArrangementId">
                                <i class="fa fa-info-circle"></i>
                            </a> |
                            <a class="btn" type="button" asp-page="./Guestlist" asp-route-id="@a.ArrangementId">
                                <i class="fa fa-users"></i>
                            </a> |
                            <a class="btn" type="button" asp-page="./Delete" asp-route-id="@a.ArrangementId">
                                <i class="fa fa-trash"></i>
                            </a>
                        </article>
                    </section>
                </li>
            }
        </ul>
        <h3></h3>
    </div>
</div>
