@page
@model ZealandEvent.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Opret event";
}

<h3>Opret et nyt event til @Model.Arrangement.Name's program for dagen.</h3>
<hr />
<div>
    <h5 style="color:red">@Model.Message</h5>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.Title" class="control-label">Begivenhed</label>
                <input asp-for="Event.Title" class="form-control" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Start" class="control-label">Start</label>
                <input type="time" asp-for="Event.Start" class="form-control" />
                <span asp-validation-for="Event.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.End" class="control-label">Slut</label>
                <input type="time" asp-for="Event.End" class="form-control" />
                <span asp-validation-for="Event.End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Location" class="control-label">Lokation</label>
                <select name="Event.Location" asp-for="Event.Location" class="form-control">
                    @foreach (var location in Enum.GetValues(typeof(ZealandEventLib.Models.Location)))
                    {
                        <option value="@location">@location</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input style="background-color:green; color:white" type="submit" value="Opret" class="btn btn-primary" /> |
                <a asp-page="../Arrangementer/Details" asp-route-id="@Model.Arrangement.ArrangementId" style="font-style:oblique; color:black"><i class="fa fa-reply" style="color:black; font-size:20px"></i> Tilbage</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
