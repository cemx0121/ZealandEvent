@page
@model ZealandEvent.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Slet event";
}

    <h3>Er du sikker på du vil slette dette arrangement samt de events der hører til?</h3>
    <div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Start)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Start)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.End)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.End)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Arrangement)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Arrangement.Name)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Event.EventId" />
            <input type="submit" value="Slet" class="btn btn-danger" /> |
            <a asp-page="../Arrangementer/Index">Tilbage til listen</a>
        </form>
    </div>
