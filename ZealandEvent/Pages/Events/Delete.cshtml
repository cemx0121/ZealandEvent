@page
@model ZealandEvent.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Slet event";
}

    <h3>Er du sikker på du vil slette dette arrangement samt de events der hører til?</h3>
    <div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Navn
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Title)
            </dd>
            <dt class="col-sm-2">
                Tidspunkt
            </dt>
            <dd class="col-sm-10">
                @Model.Event.Start.ToShortTimeString() @Model.Event.End.ToShortTimeString() 
            </dd>
            <dt class="col-sm-2">
                Lokation
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Location)
            </dd>
            <dt class="col-sm-2">
                Arrangement
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Arrangement.Name)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Event.EventId" />
            <input type="submit" value="Slet" class="btn btn-danger" /> |
            <a asp-page="../Arrangementer/Index"><i class="fa fa-reply" style="color:black; font-size:20px"></i></a>
        </form>
    </div>
